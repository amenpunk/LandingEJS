<%- include('header'); -%>
<main>
        
    <div class="row">
    <h1 class="h1">Reportes</h1>
            
            <div class="col-12 pdf"> 
                <p class="h1">Usuario</p>
                    <form method="POST" action="/userPDF">
                      
                        <div class="form-group">
                            
                            <label for="exampleInputEmail1">fecha de inicio</label>
                            <input type="date" class="form-control" name="start" id="start" aria-describedby="emailHelp" >

                            <label for="exampleInputEmail1">fecha final</label>
                            <input type="date" class="form-control" name="end" id="end" aria-describedby="emailHelp" >

                        </div>

                      <label for="exampleInputEmail1">Departamento</label>
                      
                <select id="departamento" name="departamento" class="form-control">
                    <option value="">Selecciona un departamento</option>
                    <% for(var i=0; i < Roles.length; i++) { %>
                    <option  value="<%=Roles[i].name%>"><%= Roles[i].name%></option>
                    <% } %>
                </select> 

                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
            </div>

            <div class="col-12 pdf"> 
                <p class="h1">Correos</p>
                    <form method="POST" action="/mailPDF">

                      <div class="form-group">
                        <label for="exampleInputEmail1">Estado</label>
                        <select class="form-control" id="estado_correo" name="estado_correo">
                            <option value="SUCCESS">Enviados</option>
                            <option value="FAIL">No enviado</option>
                        </select>
                      </div>

                        <div class="form-group">
                            
                            <label for="exampleInputEmail1">fecha de inicio</label>
                            <input type="date" class="form-control" name="start" id="start" aria-describedby="emailHelp" >

                            <label for="exampleInputEmail1">fecha final</label>
                            <input type="date" class="form-control" name="end" id="end" aria-describedby="emailHelp" >

                        </div>
                      
                        <label for="exampleInputEmail1">Departamento</label>
                        <select id="departamento" name="departamento" class="form-control">
                        <option value="">Selecciona un departamento</option>
                        <% for(var i=0; i < Roles.length; i++) { %>
                            <option  value="<%=Roles[i].name%>"><%= Roles[i].name%></option>
                                <% } %>
                                </select> 



                      <button type="submit" class="btn btn-primary">Submit</button>

                    </form>
            </div>
            
            <div class="col-12 pdf"> 
                <p class="h1">PNC </p>
                    <form action="pncPDF" method="POST">
                        <label for="exampleInputEmail1">Estado del PNC</label>

                        <select id="estado" name="estado" class="form-control">
                            <option value="0">Cerrado</option>
                            <option value="1">Abierto</option>
                            <option value="2">En proceso</option>
                        </select> 

                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
            </div>

            <div class="col-12 pdf"> 
                <p class="h1">Login</p>
                    <form action="loginPDF" method="POST">
                            
                            <label for="exampleInputEmail1">fecha de inicio</label>
                            <input type="date" class="form-control" name="start" id="start" aria-describedby="emailHelp" >

                            <label for="exampleInputEmail1">fecha final</label>
                            <input type="date" class="form-control" name="end" id="end" aria-describedby="emailHelp" >

                        </div>
                      

                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
            </div>
            
           
            <div class="col-12 pdf"> 
                <p class="h1">Eventos sobre archivos</p>
                    <form method="POST" action="filesPDF">
                        <label for="exampleInputEmail1">Tipo de evento</label>
                        <select id="evento" name="evento" class="form-control">
                            <option value="">Selecciona un valor</option>
                            <option value="DOWNLOAD">Descargas</option>
                            <option value="UPLOAD">Subidas</option>
                        </select> 
                        
                        <label for="exampleInputEmail1">Generar reporte de archivos subidos</label>

                        <button type="submit" class=" btn btn-primary">Submit</button>
                    </form>
            </div>

    </div>
</main>
<%- include('footer'); -%>
